//challenge 1
def hitung_total(harga, jumlah, diskon=0):
    total = harga * jumlah
    total -= total * (diskon / 100)
    return total

harga = int(input("Masukkan harga barang: "))
jumlah = int(input("Masukkan jumlah barang: "))
diskon = int(input("Masukkan diskon (%): "))

print("Total belanja =", hitung_total(harga, jumlah, diskon))

//Challenge 2
def celsius_ke_fahrenheit(celsius):
    fahrenheit = (celsius * 9/5) + 32
    return fahrenheit

# Input dari pengguna
celsius = float(input("Masukkan suhu dalam Celsius: "))

# Konversi dan output
fahrenheit = celsius_ke_fahrenheit(celsius)
print(f"{celsius}°C sama dengan {fahrenheit:.2f}°F")
