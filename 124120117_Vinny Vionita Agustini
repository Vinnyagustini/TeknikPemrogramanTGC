challenge 2
class Sensor:
    def __init__(self, id_sensor, lokasi, jenis):
        self.id_sensor = id_sensor
        self.lokasi = lokasi
        self.jenis = jenis
    def info(self):
        print(f"ID: {self.id_sensor}")
        print(f"Lokasi: {self.lokasi}")
        print(f"Jenis: {self.jenis}")
class SensorSeismik(Sensor):
    def __init__(self, id_sensor, lokasi, jenis, frekuensi_sampling):
        super().__init__(id_sensor, lokasi, jenis)
        self.frekuensi_sampling = frekuensi_sampling
        self.data_amplitudo = []
    def jumlah_sampel(self):
        return len(self.data_amplitudo)
# Contoh penggunaan
sensor = SensorSeismik("S001", "Gunung Merapi", "Seismometer", 100)
sensor.info()
print(f"Frekuensi Sampling: {sensor.frekuensi_sampling} Hz")
sensor.data_amplitudo = [0.5, 0.7, 0.3, 0.9]
print(f"Jumlah Sampel: {sensor.jumlah_sampel()}")

challenge 2
from abc import ABC, abstractmethod   # <--- ini cara importnya
class Survey(ABC):   # turunan dari ABC
    @abstractmethod
    def processing(self):
        pass
class SeismicSurvey(Survey):
    def processing(self):
        print("Seismic: Filtering data")
class GravitySurvey(Survey):
    def processing(self):
        print("Gravity: Upward continuation")
class MagnetikSurvey(Survey):
    def processing(self):
        print("Magnetik: Anomaly mapping")
# Masukkan ke list dan iterasi
daftar_survey = [
    SeismicSurvey(),
    GravitySurvey(),
    MagnetikSurvey()
]
for survey in daftar_survey:
    survey.processing()
